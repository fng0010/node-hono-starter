{
    "name": "node-hono-starter",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "check": "biome check --write .",
        "prepare": "husky"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.6",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.44.7",
        "hono": "^4.10.4",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.4",
        "@types/node": "^20.11.17",
        "@types/pg": "^8.15.6",
        "drizzle-kit": "^0.31.6",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "tsx": "^4.20.6",
        "typescript": "^5.8.3"
    },
    "lint-staged": {
        "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
            "biome check --write --no-errors-on-unmatched"
        ]
    }
}
